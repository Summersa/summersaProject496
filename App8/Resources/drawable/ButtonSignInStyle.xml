<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">
    <layer-list>
      <item android:right="0dp" android:top="0dp">
        <shape>
          <corners android:radius="5dp"/>
          <solid android:color="#D6D6D6"/>
        </shape>

      </item>
      <item android:left="0dp" android:bottom="0dp">
        <shape>
          <gradient android="270" android:endColor="#330099" android:startColor="#330099"/>
          <stroke android:width="1dp" android:color="#330099"/>
          <corners android:radius="4dp"/>
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>

        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="5dp"/>
          <solid android:color="#D6D6D6"/>
        </shape>

      </item>
      <item android:left="5dp" android:bottom="5dp">
        <shape>
          <gradient android="270" android:endColor="#4A6EBF" android:startColor="#4A6EBF"/>
          <stroke android:width="1dp" android:color="#0ABABA"/>
          <corners android:radius="4dp"/>
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>

        </shape>
      </item>
    </layer-list>
  </item>

 


</selector>